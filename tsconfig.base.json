{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["libs/shared/src/*"]
        }
    }
}
